# Transport-level TCP SYN Scan (PRIMARY SIGNAL)
alert tcp any any -> $HOME_NET any (msg:"RECON: TCP SYN Port Scan Detected"; flags:S; threshold:type both, track by_src, count 15, seconds 60; classtype:network-scan; sid:9000001; rev:1;)

# SSH Invalid Banner
alert ssh any any -> $HOME_NET any (msg:"RECON: SSH Invalid Banner (Possible Fingerprinting)"; flow:established; app-layer-event:ssh.invalid_banner; classtype:protocol-command-decode; sid:9000002; rev:1;)

# SSH Excessively Long Banner
alert ssh any any -> $HOME_NET any (msg:"RECON: SSH Excessively Long Banner (Scanner Behavior)"; flow:established; app-layer-event:ssh.long_banner; classtype:protocol-command-decode; sid:9000003; rev:1;)

# HTTP Missing Host Header
alert http any any -> $HOME_NET any (msg:"RECON: HTTP Missing Host Header (Scanner Probe)"; flow:established,to_server; app-layer-event:http.missing_host_header; classtype:protocol-command-decode; sid:9000004; rev:1;)

# HTTP Invalid Request Line
alert http any any -> $HOME_NET any (msg:"RECON: HTTP Invalid Request Line (Malformed Probe)"; flow:established,to_server; app-layer-event:http.request_line_invalid; classtype:protocol-command-decode; sid:9000005; rev:1;)

# HTTP Invalid Header
alert http any any -> $HOME_NET any (msg:"RECON: HTTP Invalid Header (Scanner Behavior)"; flow:established,to_server; app-layer-event:http.request_header_invalid; classtype:protocol-command-decode; sid:9000006; rev:1;)

# TCP Stealth Scan (FIN / NULL / XMAS)
alert tcp any any -> $HOME_NET any (msg:"RECON: TCP Stealth Scan (FIN/NULL/XMAS)"; flags:0; threshold:type both, track by_src, count 10, seconds 60; classtype:network-scan; sid:9000007; rev:1;)
alert tcp any any -> $HOME_NET any (msg:"RECON: TCP FIN Scan Detected"; flags:F; threshold:type both, track by_src, count 10, seconds 60; classtype:network-scan; sid:9000008; rev:1;)


